# ==============================================================================
# DJANGO SETTINGS
# ==============================================================================
DJANGO_SECRET_KEY=django-insecure-local-dev-key-change-in-production
DEBUG=True

# ==============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================================================
DB_NAME=movie_backend
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_HOST=localhost
DB_PORT=5432

# ==============================================================================
# TMDB API CONFIGURATION
# Get your API key from: https://www.themoviedb.org/settings/api
# ==============================================================================
TMDB_API_KEY=your-tmdb-api-key-here

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=10080
JWT_ALGORITHM=HS256

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================================================
# API RATE LIMITING
# ==============================================================================
RATE_LIMIT_ANONYMOUS=100/hour
RATE_LIMIT_AUTHENTICATED=1000/hour

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=DEBUG

# ==============================================================================
# EMAIL CONFIGURATION (Optional for development)
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# ==============================================================================
# SENTRY (Error Monitoring - Production)
# ==============================================================================
SENTRY_DSN=

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
ENVIRONMENT=development
